<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <header class="header"><%- include('../partials/header') %></header>
    <main class="formulario_main">
      <h1 class="formulario_titulo">Editar <%= product.name %></h1>
      <form
        class="formulario"
        method="post"
        enctype="multipart/form-data"
        action="/products/<%= product.id %>?_method=put"
      >
        <input
          type="text"
          name="name"
          class="formulario_input"
          required
          value="<%= product.name %>"
        />
        <label for="" class="formulario_label"> Nombre de producto: </label>
        <input type="number" name="price" class="formulario_input" required />
        <label for="" class="formulario_label">Precio</label>
        <input type="text" name="description" class="formulario_input" />
        <label for="" class="formulario_label">Descripcion</label>
        <input type="text" name="brand" class="formulario_input" required />
        <label for="" class="formulario_label">Marca</label>
        <input type="text" name="category" class="formulario_input" required />
        <label for="" class="formulario_label">Categoria</label>

        <select name="oferta" id="" class="formulario_input" required>
          <option value="oferta">En Oferta</option>
          <option value="noOferta">Sin Oferta</option>
        </select>

        <input type="file" name="image" class="formulario_input" />

        <input type="submit" class="formulario_submit" />
        <input type="reset" class="formulario_reset" />
      </form>
      <script src="scripts/form.js"></script>
    </main>
    <footer class="footer-catalogo">
      <%- include('../partials/footer') %>
    </footer>
  </body>
</html>
